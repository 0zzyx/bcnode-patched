
/*
 *  Stable Coin using modified Bitcoin Script (BEAM)
 *
 *  Ex. Fixed supply managed issuance stablecoin basket of assets (compatible with basecoin)
 *
 */
const web3 = require("web3");
const waves = require("waves-api");

const builder = require("bcnode/builder");
const account = require("bcnode/account");

const wavToken = builder.wav.createToken({
    name: 'Stable Coin',
    description: 'Some words about it',
    quantity: 10000000000, // With given options you'll have 100000.00000 tokens
    precision: 5, // This flag defines whether additional emission is possible
    reissuable: false,
    fee: 100000000,
    timestamp: Date.now()
});

/* 
 * DEFAULT: ERC20 
 * REF: https://github.com/ethereum/EIPs/blob/master/EIPS/eip-20.md 
 */
const ethToken = builder.eth.createToken({
	name: 'Stable Coin',
	symbol: "",
	decimals: 18,
	totalSupply: 1000000 * 10**uint(decimals),
	owner: ""	
});

/* 
 * DEFAULT: Nep5 NEO Token Contract from Trinity Scaling Technology 
 * REF: https://github.com/trinity-project/trinity/blob/master/contract/trinity-contract/nep5_contract/Contract1.cs
 */
const neoToken = builder.neo.createToken({
	name: 'Stable Coin',
	symbol: "",
	decimals: 18,
	totalSupply: 1000000 * 10**uint(18),
	owner: ""	
});

